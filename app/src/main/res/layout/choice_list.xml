<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/choice_wc"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_baseline_wc_24"
        android:padding="4dp"
        android:layout_margin="8dp"
        android:background="@drawable/bg_choice_selected"/>

    <ImageView
        android:id="@+id/choice_movie"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_baseline_movie_24"
        android:padding="4dp"
        android:layout_margin="8dp"
        android:background="@drawable/bg_choice"/>

    <ImageView
        android:id="@+id/choice_gas"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_baseline_local_gas_station_24"
        android:padding="4dp"
        android:layout_margin="8dp"
        android:background="@drawable/bg_choice"/>

    <ImageView
        android:id="@+id/choice_ev"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_baseline_electric_car_24"
        android:padding="4dp"
        android:layout_margin="8dp"
        android:background="@drawable/bg_choice"/>

    <ImageView
        android:id="@+id/choice_store"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_baseline_storefront_24"
        android:padding="4dp"
        android:layout_margin="8dp"
        android:background="@drawable/bg_choice"/>

    <ImageView
        android:id="@+id/choice_food"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_baseline_fastfood_24"
        android:padding="4dp"
        android:layout_margin="8dp"
        android:background="@drawable/bg_choice"/>

    <ImageView
        android:id="@+id/choice_park"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_baseline_park_24"
        android:padding="4dp"
        android:layout_margin="8dp"
        android:background="@drawable/bg_choice"/>

    <ImageView
        android:id="@+id/choice_church"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_baseline_church_24"
        android:padding="4dp"
        android:layout_margin="8dp"
        android:background="@drawable/bg_choice"/>

    <ImageView
        android:id="@+id/choice_school"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_baseline_school_24"
        android:padding="4dp"
        android:layout_margin="8dp"
        android:background="@drawable/bg_choice"/>





</LinearLayout>